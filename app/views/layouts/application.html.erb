<!DOCTYPE html>
<html>

  <head>
    <title>College Finder</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/1.11.8/semantic.min.css"/>
<!--     <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.13/components/site.min.js"></script> -->
   <!--  <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/1.11.8/semantic.min.js"></script> -->
  </head>

  <body>

<!-- Open Header -->
    <div>
      <h2 class="ui header"></h2>
        <a href="/" class="item">
          <h1>College Finder</h1>
        </a>
      <%= link_to "Sign Up", new_user_path %>
      <br>

      <div class="right menu">


        <% if logged_in? %>
         <%= link_to 'Logout', logout_path, class: 'item', method: 'delete' %> |
         <%= link_to "Your Profile", user_path(current_user) %>
        <% else %>
         <p><%= link_to "Sign In", '/signin' %></p>
      <% end %>

     </div>

    </div>
<!-- Close Header -->

<!-- Main Body Content  -->


        <%= yield %>

<div>
  <%= form_tag("/name_search", method: "get") do %>
  <%= label_tag(:name, "Search by Name") %>
  <%= text_field_tag(:name) %>
  <%= submit_tag("Search") %>
  <% end  %>

</div>
<!-- Close Main Body Content -->

<!-- Nav Links -->
    <%= link_to "See All Colleges", colleges_path %>
    <%= link_to "See All Programs", programs_path %>
<!-- Close Nav Links -->
  

  </body>
</html>