 <!DOCTYPE html>
<html>
  <head>
    <title>Amusement Park</title>
    <%= stylesheet_link_tag    "application", media: "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= analytics_init if Rails.env.production? %>
    <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet"></link>
  </head>
  <body>
    <!--  navbar -->
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          
        <a class="navbar-brand" href="<%= root_url %>"/>Home</a>

        <% if !logged_in? %>
          <a class="navbar-brand" id="Sign In" href="/signin"/>Login</a>
          <a class="navbar-brand" id="Sign Up" href="<%= new_user_path%>"/>Sign Up</a>
        <% else%>
          <%= link_to 'Log Out', logout_path, method: 'delete' %>
        <% end %>

        

       
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
           <!--  nav here -->
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>

    <!-- content -->
    <div class="container"  role="main">
      <%= yield %>
      <%= link_to "See All Colleges", colleges_path %>
      <%= link_to "See All Programs", programs_path %>

    </div>

  </body>
</html>