<%= form_for @user, {html: {class: 'ui form'}} do |f| %>
<div class="ui form">
<div class="six wide field">

  	<ul><div class="field">
	<p><%= f.label :name %>
    <%= f.text_field :username, placeholder: 'Enter full name' %>
 	</div></p></ul>

	<ul><div class="field">
	<p><%= f.label :password %>
	<%= f.text_field :password, placeholder: 'Password' %>
  	</div></p></ul>

  	<ul><div class="field">
	<p><%= f.label :state %>
	<%= f.text_field :state, placeholder: 'Eg: NY, NJ, CA' %>
  	</div></p></ul>

  <ul><div class="field">
	<p>SAT Score <%= f.text_field :sat_score %><br>
	</p></ul>

	<ul><div class="field">
	<p>ACT Score <%= f.text_field :act_avg %><br>
	</p></ul>
<!-- select menu for majors -->
	<ul><div class="field">
	<p>Field of Study <%= f.collection_select :program_id, Program.all, :id, :name %><br></p></ul>
	<ul><%= f.submit class: 'large ui blue basic button' %><br></ul>

</div>
<% end %> 

