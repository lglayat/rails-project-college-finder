 <% if flash[:message] != nil%>
 	<%= flash[:message] %>
 <% end %>

<ul>
  <li id="user[name]">Name: <%= @user.username %></li>
  <li>State: <%= @user.state %></li>
  <li>Field of Study: <%= @user.program.name %></li>



  <% if @user.sat_score != nil %>
  	<li>SAT Score: <%= @user.sat_score %></li>
  <% end %>

  <% if @user.act_avg != nil %>
  	<li>ACT Score: <%= @user.act_avg %></li>
  <% end %>

  <%= link_to "Edit Profile", edit_user_path(@user) %>
</ul>

<%= form_tag("/user_search", method: "get") do %>
  Are you studying In State Only? 
  <%= check_box_tag :in_state %>
  <%= submit_tag "View Recommended Colleges" %>
<% end %>

<h3>Colleges on Your List</h3>

<ul>
<% current_user.colleges.each do |c| %>

<li> <%= link_to c.name, college_path(c) %> <%= button_to "Delete", '/delete_watchlist', method: "delete"%> </li>

<% end %> 
</ul>


